{
    "compilerOptions": {

      "outDir": "dist",
      "target": "es2015",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "removeComments": true,
      "types": [
        "node"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost",
      ]
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  