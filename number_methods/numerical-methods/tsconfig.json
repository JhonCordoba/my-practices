{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM",
            "dom.iterable"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*",
            ],
            "@/*": [
                "./src/*",
            ]
        },
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "types": [
            "@types/node",
        ],
    },
    "exclude": [
        "node_modules"
    ]
}