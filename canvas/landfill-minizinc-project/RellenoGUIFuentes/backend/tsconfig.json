{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "incremental": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "@types/jest",
      "@types/node",
    ]
  },
  "exclude": [
    "dist"
  ],

}